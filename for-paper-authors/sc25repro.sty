\newcommand{\newartifact}{%
    \stepcounter{artifactCounter}%
    \subsection{Computational Artifact $A_{\theartifactCounter}$}%
}

\newcommand{\artrel}{%
    \subsection*{Relation To Contributions}%
}

\newcommand{\artexp}{%
    \subsection*{Expected Results}%
}

\newcommand{\arttime}{%
    \subsection*{Expected Reproduction Time (in Minutes)}%
}

\newcommand{\artin}{%
    \subsection*{Artifact Setup (incl. Inputs)}
}

\newcommand{\artinpart}[1]{%
\subsubsection*{#1}}

\newcommand{\artcomp}{%
    \subsection*{Artifact Execution}
}

\newcommand{\artout}{%
    \subsection*{Artifact Analysis (incl. Outputs)}
}


\newcommand{\apppart}[1]{%
